{
	"name": "delegate-it",
	"version": "4.0.0",
	"description": "Lightweight and modern event delegation in the browser",
	"keywords": [
		"delegate",
		"browser",
		"dom",
		"live",
		"selector",
		"delegation",
		"chrome",
		"electron",
		"firefox",
		"safari",
		"event"
	],
	"repository": "fregante/delegate-it",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc && xo && ava",
		"watch": "run-p --silent watch:*",
		"watch:build": "tsc --watch",
		"watch:test": "ava --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"max-params": "off",
			"@typescript-eslint/naming-convention": "off"
		}
	},
	"dependencies": {
		"typed-query-selector": "^2.6.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"ava": "^4.3.0",
		"jsdom": "^20.0.0",
		"npm-run-all": "^4.1.5",
		"sinon": "^14.0.0",
		"typescript": "^4.7.4",
		"xo": "^0.50.0"
	}
}
